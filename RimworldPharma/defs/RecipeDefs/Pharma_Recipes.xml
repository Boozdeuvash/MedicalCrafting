<!-- ******** REGULAR MEDICINE STUFF **********-->

<RecipeDef>
		<defName>PharmaMakeMedTools</defName>
		<label>Craft Medical Tools</label>
		<description>Craft Medical tools, a necessary part of medikits</description>
		<jobString>Crafting Med tools</jobString>
		<workAmount>1600</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<ingredients>
		  <li>
			<filter>
			  <thingDefs>
				<li>Steel</li>
			  </thingDefs>
			</filter>
			<count>5</count>
		  </li>
		  
		</ingredients>    
		<fixedIngredientFilter>
		<thingDefs>
        <li>Steel</li>
		</thingDefs>
		</fixedIngredientFilter>
		<products>
		  <PharmaMedTools>1</PharmaMedTools>
		</products>
		<skillRequirements>
			<li>
				<skill>Medicine</skill>
				<minLevel>6</minLevel>
			</li>
		</skillRequirements>
		<workSkill>Medicine</workSkill>
	</RecipeDef>


	
	<RecipeDef>
		<defName>PharmaMakeMedicine</defName>
		<label>Craft Medicine</label>
		<description>Combine Herbal meds, clothe and Medical tools to produce a real and FDA-approved med kit</description>
		<jobString>Crafting medicine</jobString>
		<workAmount>1600</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<ingredients>
		  <li>
			<filter>
			  <thingDefs>
				<li>HerbalMedicine</li>
			  </thingDefs>
			</filter>
			<count>3</count>
		  </li>
		  <li>
			<filter>
			  <thingDefs>
				<li>Cloth</li>
			  </thingDefs>
			</filter>
			<count>3</count>
		  </li>
		  <li>
			<filter>
			  <thingDefs>
				<li>PharmaMedTools</li>
			  </thingDefs>
			</filter>
			<count>1</count>
		  </li>
		</ingredients>    
		<fixedIngredientFilter>
		<thingDefs>
        <li>HerbalMedicine</li>
		<li>Cloth</li>
		<li>PharmaMedTools</li>
		</thingDefs>
		</fixedIngredientFilter>
		<products>
		  <Medicine>1</Medicine>
		</products>
		<skillRequirements>
			<li>
				<skill>Medicine</skill>
				<minLevel>6</minLevel>
			</li>
		</skillRequirements>
		<workSkill>Medicine</workSkill>
	</RecipeDef>
	
